package programming2Week2;

public class Smoothies {
   
	private int Spoon;
	private String Fruit;
	private String liquid;
	private Boolean Status;
	private String Time;
	private String Message;
	
	public Smoothies() {
		this.setSpoon(2);
		this.setFruit("Banana");
		this.setLiquid("Milk");
		this.setStatus(true);
		this.setTime("30s");
		this.setMessage("It is ready");
	}
	
	public Smoothies(int spoon, String fruit, String water, Boolean n, String time, String message) {
		this.setSpoon(spoon);
		this.setFruit(fruit);
		this.setLiquid(water);
		this.setStatus(n);
		this.setTime(time);
		this.setMessage(message);
	}
	
//	public void CheckPreparation() {
//		System.out.println("Now there is " + this.getSpoon()+" "+this.getFruit()+" And "+this.getLiquid());
//	}
	
	
//	public void 
	public String toString() {
		return Message + " And will need " + Time;
	}
	public int getSpoon() {
		return Spoon;
	}
	public void setSpoon(int spoon) {
		Spoon = spoon;
	}
	public String getFruit() {
		return Fruit;
	}
	public void setFruit(String fruit) {
		Fruit = fruit;
	}
	public String getLiquid() {
		return liquid;
	}
	public void setLiquid(String liquid) {
		this.liquid = liquid;
	}
	public Boolean getStatus() {
		return Status;
	}
	public void setStatus(Boolean status) {
		Status = status;
	}
	public String getTime() {
		return Time;
	}
	public void setTime(String time) {
		Time = time;
	}
	public String getMessage() {
		return Message;
	}
	public void setMessage(String message) {
		Message = message;
	}
}
